{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <div class="mt-10 text-center">
                {% if app.user.image %}
                    <img class="mx-auto h-24 w-24 rounded-full" src="{{ asset('uploads/profile_pictures/' ~ app.user.image) }}" alt="Profile Picture">
                {% else %}
                    <img class="mx-auto h-24 w-24 rounded-full" src="{{ asset('images/default_profile.png') }}" alt="Profile Picture">
                {% endif %}
            </div>

            <h2 class="mt-4 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Edit your profile</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            {% for flash_success in app.flashes('success') %}
                <div class="alert alert-success text-green-600" role="alert">{{ flash_success }}</div>
            {% endfor %}
            {% for flash_error in app.flashes('error') %}
                <div class="alert alert-danger text-red-600" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'space-y-6', 'data-turbo': 'false'}}) }}

            <div>
                <label for="profilePictureFile" class="block text-sm font-medium leading-6 text-gray-900">Change Profile Picture</label>
                <div class="mt-2">
                    {{ form_widget(form.profilePictureFile, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
                </div>
            </div>

            <div>
                <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Username</label>
                <div class="mt-2">
                    {{ form_widget(form.username, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
                <div class="mt-2">
                    {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
                </div>
            </div>

            <div>
                <label for="plainPassword" class="block text-sm font-medium leading-6 text-gray-900">New Password (leave blank to keep the current one)</label>
                <div class="mt-2">
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
                </div>
            </div>

            <div>
                <label for="currentPassword" class="block text-sm font-medium leading-6 text-gray-900">Current Password</label>
                <div class="mt-2">
                    {{ form_widget(form.currentPassword, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md bg-blue-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500">
                    Save Changes
                </button>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
