<div class="space-y-6">
    {{ form_start(form, {'attr': {'class': 'space-y-6', 'data-turbo': 'false'}}) }}

    <div>
        <label for="timer" class="block text-sm font-medium leading-6 text-gray-900">Timer</label>
        <div class="mt-2">
            {{ form_widget(form.timer, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
        </div>
    </div>

    <div class="{% if form.createdAt.vars.disabled %}hidden{% endif %}">
        <label for="createdAt" class="block text-sm font-medium leading-6 text-gray-900">Created At</label>
        <div class="mt-2">
            {{ form_widget(form.createdAt, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
        </div>
    </div>

    <div class="{% if form.updatedAt.vars.disabled %}hidden{% endif %}">
        <label for="updatedAt" class="block text-sm font-medium leading-6 text-gray-900">Updated At</label>
        <div class="mt-2">
            {{ form_widget(form.updatedAt, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
        </div>
    </div>

    <div class="{% if form.userNumber.vars.disabled %}hidden{% endif %}">
        <label for="userNumber" class="block text-sm font-medium leading-6 text-gray-900">User Number</label>
        <div class="mt-2">
            {{ form_widget(form.userNumber, {'attr': {'class': 'block w-full rounded-md border-0 p-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6'}}) }}
        </div>
    </div>

    <div class="flex items-center {% if form.isActive.vars.disabled %}hidden{% endif %}">
        <div class="form-check">
            {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500'}}) }}
        </div>
        <label for="isActive" class="ml-2 block text-sm font-medium leading-6 text-gray-900">Is Active</label>
    </div>

    <div>
        <button type="submit" class="flex w-full justify-center rounded-md bg-blue-500 px-3 mb-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500">
            {{ button_label|default('Submit') }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
